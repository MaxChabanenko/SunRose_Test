@model SunRose_Test.Models.UserAndMessage

@{
    ViewData["Title"] = "Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@(Model.user.Username)'s feed</h2>

<div class="row">
    <div class="col-sm-4">
    <div class="row">
    <div class="col-md-8">
        <form asp-action="Post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="message.Text" class="control-label"></label>
                <textarea asp-for="message.Text" class="form-control" > </textarea>
                <span asp-validation-for="message.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="message.UserId" class="control-label"></label>
                <input readonly asp-for="message.UserId" class="form-control" />
                <span asp-validation-for="message.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Post" class="btn btn-primary" />
            </div>
        </form>
        <div>
    <a asp-action="Index">Back to List</a>
</div>
    </div>
</div>
    </div>
    <div class="col-sm-8">
    @foreach (var item in Model.user.Feed.Reverse()) 
        {
        <hr/>
        <div class="row">
            <div class="col-sm-8">
                @Html.DisplayFor(modelItem => item.Text)
            
            </div>
            <div class="col-sm-4">
               
                @Html.DisplayFor(modelItem => item.CreatedDate)
                 
            </div>
        </div>
        }
    </div>


</div>


