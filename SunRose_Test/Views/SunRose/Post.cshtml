@model SunRose_Test.Models.ModelViews.UserAndMessage

@{
    ViewData["Title"] = "Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@(Model.User.Username)'s feed</h2>

<div class="row">
    <div class="col-sm-4">
    <div class="row">
    <div class="col-md-8">
        <form asp-action="Post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Message.Text" class="control-label"></label>
                <textarea asp-for="Message.Text" class="form-control" > </textarea>
                <span asp-validation-for="Message.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.UserId" class="control-label"></label>
                <input readonly asp-for="Message.UserId" class="form-control" />
                <span asp-validation-for="Message.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Post" class="btn btn-primary" />
            </div>
        </form>
        <div>
    <a asp-controller ="Account" asp-action="Index">Back to List</a>
</div>
</div>
</div>
</div>

    <div class="col-sm-8">
    @foreach (var item in Model.User.Feed.Reverse()) 
        {
        <hr/>
        <div class="row">
            <div class="col-sm-8">
                @Html.DisplayFor(modelItem => item.Text)
            </div>
            <div class="col-sm-4">
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </div>
        </div>
        }
    </div>
</div>
